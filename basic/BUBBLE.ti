10 PRINT "Bubble Sort"
20 PRINT
30 OPTION BASE 1
40 RANDOMIZE
50 DIM N(20)
60 PRINT "Random numbers:"
70 FOR I = 1 TO 20
80 LET N(I) = INT (RND() * 100) + 1
90 PRINT N(I)
100 NEXT
110 PRINT
120 PRINT "Sorting..."
130 LET S = 0
140 FOR I = 1 TO 19
150 IF N(I) <= N(I + 1) THEN 200
160 LET TMP = N(I)
170 LET N(I) = N (I + 1)
180 LET N(I + 1) = TMP
190 LET S = 1
200 NEXT
205 PRINT ".";
210 IF S = 1 THEN 130
215 PRINT
220 PRINT "Sorted numbers:"
230 FOR I = 1 TO 20
240 PRINT N(I)
250 NEXT
260 PRINT
